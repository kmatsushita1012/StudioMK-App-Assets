{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "maintenance": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "message": {
                            "type": "string"
                        },
                        "until": {
                            "type": "string",
                            "format": "date-time"
                        }
                    },
                    "required": [
                        "message",
                        "until"
                    ],
                    "additionalProperties": false
                },
                {
                    "type": "null"
                }
            ]
        },
        "update": {
            "type": "object",
            "properties": {
                "ios": {
                    "type": "object",
                    "properties": {
                        "requiredVersion": {
                            "type": "string"
                        },
                        "storeUrl": {
                            "type": "string",
                            "format": "uri"
                        }
                    },
                    "required": [
                        "requiredVersion",
                        "storeUrl"
                    ],
                    "additionalProperties": false
                },
                "android": {
                    "type": "object",
                    "properties": {
                        "requiredVersion": {
                            "type": "string"
                        },
                        "storeUrl": {
                            "type": "string",
                            "format": "uri"
                        }
                    },
                    "required": [
                        "requiredVersion",
                        "storeUrl"
                    ],
                    "additionalProperties": false
                }
            },
            "required": [
                "ios",
                "android"
            ],
            "additionalProperties": false
        }
    },
    "required": [
        "maintenance",
        "update"
    ],
    "additionalProperties": false
}